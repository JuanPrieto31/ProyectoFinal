<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!-- Configuración general -->
    <display-name>Transacciones</display-name>

    <!-- Codificación UTF-8 para todas las solicitudes -->
    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>org.apache.catalina.filters.SetCharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
        <init-param>
            <param-name>ignore</param-name>
            <param-value>false</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    
    <servlet>
        <servlet-name>DonacionControl</servlet-name>
        <servlet-class>com.control.DonacionControl</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>DonacionControl</servlet-name>
        <url-pattern>/DonacionControl</url-pattern>
    </servlet-mapping>

    <!-- Página por defecto -->
    <welcome-file-list>
        <welcome-file>donacion.jsp</welcome-file>
    </welcome-file-list>

</web-app>
